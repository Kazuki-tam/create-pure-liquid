{
  "name": "create-pure-liquid",
  "version": "1.0.4",
  "description": "Create a Pure Liquid project in seconds.",
  "bin": "dist/bin/cli.js",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prd": "npm-run-all build lint push",
    "build": "npm-run-all clean -p build:*",
    "build:common": "tsc",
    "build:esm": "tsc -p tsconfig.esm.json",
    "lint": "npm-run-all lint:*",
    "lint:eslint": "eslint . --ext .ts,.tsx --fix",
    "lint:prettier": "prettier --write .",
    "local": "node dist/bin/cli.js test-project",
    "clean": "npm-run-all -p clean:*",
    "clean:local": "rimraf test-project",
    "clean:dist": "rimraf dist",
    "postInstall": "typesync",
    "push": "yarn publish --access public",
    "compress": "yarn pack --dry-run"
  },
  "keywords": [
    "starter",
    "liquid",
    "cli",
    "static-websites",
    "template"
  ],
  "homepage": "https://github.com/Kazuki-tam/pure-liquid#pure-liquid",
  "repository": {
    "type": "git",
    "url": "git@github.com:Kazuki-tam/pure-liquid.git"
  },
  "author": "Kazuki Yonemoto (https://dev.to/tim_yone)",
  "license": "MIT",
  "dependencies": {
    "chalk": "4.1.2",
    "emoji-regex": "^10.1.0",
    "figlet": "^1.5.2"
  },
  "devDependencies": {
    "@types/eslint": "^8.4.6",
    "@types/figlet": "^1.5.5",
    "@types/node": "^18.7.18",
    "@types/prettier": "^2.7.0",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3",
    "typesync": "^0.9.2"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn test && yarn lint"
  },
  "engines": {
    "node": ">=16"
  }
}
